{% extends 'admin/base.html.twig' %}
{% block title %}Nouvelle Catégorie{% endblock %}
{% block stylesheets %}
<style>
  .form-container {
    max-width: 600px;
    margin: 40px auto;
    padding: 32px;
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }
  
  .page-title {
    font-size: 28px;
    font-weight: 700;
    color: #111827;
    margin-bottom: 32px;
    text-align: center;
  }
  
  .form-group {
    margin-bottom: 24px;
  }
  
  .form-label {
    display: block;
    font-size: 15px;
    font-weight: 600;
    color: #374151;
    margin-bottom: 8px;
  }
  
  .form-control {
    width: 100%;
    padding: 12px 16px;
    font-size: 15px;
    border: 2px solid #E5E7EB;
    border-radius: 8px;
    transition: all 0.2s ease;
  }
  
  .form-control:focus {
    border-color: #3B82F6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    outline: none;
  }
  
  .buttons-container {
    display: flex;
    gap: 12px;
    margin-top: 32px;
  }
  
  .btn {
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 15px;
    transition: all 0.2s ease;
    cursor: pointer;
  }
  
  .btn-success {
    background: #059669;
    color: white;
    border: none;
    flex: 1;
  }
  
  .btn-success:hover {
    background: #047857;
    transform: translateY(-1px);
  }
  
  .btn-secondary {
    background: #F3F4F6;
    color: #374151;
    border: 1px solid #E5E7EB;
    padding: 12px 24px;
  }
  
  .btn-secondary:hover {
    background: #E5E7EB;
  }
  /* Les autres styles restent inchangés */
</style>
{% endblock %}

{% block body %}
<div class="form-container">
  <h1 class="page-title">Créer une Nouvelle Catégorie</h1>
  
  {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
  <div class="form-group">
    <label class="form-label">Nom de la catégorie</label>
    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.nom) }}
  </div>
  
  <div class="buttons-container">
    <button type="submit" class="btn btn-success">Enregistrer</button>
    <a href="{{ path('admin_categorie_index') }}" class="btn btn-secondary">Retour</a>
  </div>
  {{ form_end(form) }}
</div>
{% endblock %}
