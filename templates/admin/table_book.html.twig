.btn-primary:hover {
    background-color: #62b6cb;
    box-shadow: 0px 0px 10px rgba(98, 182, 203, 0.5);
}


/* âœ… Table Styling */
.book-table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    font-size: 14px;
    border-radius: 10px;
    overflow: hidden;
    background: var(--light);
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
}

/* âœ… Table Header */
.book-table thead {
    background: var(--blue);
    color: var(--light);
}

.book-table th {
    padding: 12px;
    text-align: left;
    font-weight: 600;
}

/* âœ… Table Body */
.book-table tbody tr {
    border-bottom: 1px solid var(--grey);
    transition: all 0.3s ease-in-out;
}

.book-table tbody tr:hover {
    background: var(--light-blue);
    transition: all 0.3s ease-in-out;
}

/* âœ… Table Cells */
.book-table td {
    padding: 10px;
    color: var(--dark);
}

/* âœ… Action Buttons */
.btn-danger, .btn-update {
    display: inline-block;
    padding: 6px 12px;
    font-size: 13px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 6px;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
    border: none;
}

/* âœ… Update Button */
.btn-update {
    background-color: var(--yellow);
    color: var(--dark);
}

.btn-update:hover {
    background-color: #e0a800;
}

/* âœ… Delete Button */
.btn-danger {
    background-color: var(--red);
    color: var(--light);
}

.btn-danger:hover {
    background-color: #c82333;
}

/* âœ… Responsive Design */
@media screen and (max-width: 768px) {
    .book-table {
        font-size: 12px;
    }

    .btn-danger, .btn-update {
        padding: 5px 8px;
        font-size: 12px;
    }
}


</style>
{% endblock %}


