{% extends 'base.html.twig' %}

{% block title %}Ajouter une Cat√©gorie{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style2.css') }}">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css">
    <style>
        /* ‚úÖ Form Container */
        .form-container {
            background: #fff;
            padding: 30px;
            border-radius: 12px;
            max-width: 500px;
            width: 100%;
            margin: auto;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease-in-out;
        }

        /* ‚úÖ Form Header */
        .form-container h2 {
            text-align: center;
            font-size: 22px;
            color: #333;
            margin-bottom: 20px;
        }

        /* ‚úÖ Form Group */
        .form-group {
            margin-bottom: 20px;
        }

        /* ‚úÖ Labels */
        .form-group label {
            display: block;
            font-weight: 600;
            color: #444;
            margin-bottom: 5px;
        }

        /* ‚úÖ Input Fields */
        .form-group input {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            outline: none;
            transition: all 0.3s ease-in-out;
        }

        /* ‚úÖ Input Focus Effect */
        .form-group input:focus {
            border-color: #4070f4;
            box-shadow: 0px 0px 8px rgba(64, 112, 244, 0.5);
        }

        /* ‚úÖ Submit Button */
        .form-submit {
            width: 100%;
            padding: 12px;
            background: #4070f4;
            color: #fff;
            font-size: 16px;
            font-weight: 600;
            text-align: center;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }

        .form-submit:hover {
            background: #3055c7;
        }

        /* ‚úÖ Cancel Button */
        .btn-secondary {
            display: block;
            width: 100%;
            text-align: center;
            margin-top: 10px;
            padding: 12px;
            background: #ccc;
            color: #333;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
        }

        .btn-secondary:hover {
            background: #bbb;
        }

        /* ‚úÖ Alert Messages */
        .alert {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            font-weight: 600;
            text-align: center;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
        }

        /* ‚úÖ Responsive Design */
        @media screen and (max-width: 576px) {
            .form-container {
                padding: 20px;
                max-width: 90%;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/script2.js') }}" defer></script>
{% endblock %}

{% block body %}
    <!-- ‚úÖ Sidebar Navigation -->
    <section id="sidebar">
        <div class="logo_items flex">
            <span class="nav_image">
                <img src="{{ asset('image/logo.png') }}" alt="Logo" class="resized-logoimage">
            </span>
            <span class="logo_name">Edu9raya</span>
        </div>

        <ul class="side-menu top">
            <li class="active"><a href="#"><i class='bx bxs-dashboard'></i><span>Dashboard</span></a></li>
            <li><a href="{{ path('table_book') }}"><i class='bx bxs-shopping-bag-alt'></i><span>My books</span></a></li>
            <li><a href="{{ path('list_categorie') }}"><i class='bx bxs-doughnut-chart'></i><span>List cat√©gories</span></a></li>
            <li><a href="{{ path('app_ajjouter') }}"><i class='bx bxs-message-dots'></i><span>Ajouter Livres</span></a></li>
            <li><a href="{{ path('add_categorie') }}"><i class='bx bxs-group'></i><span>Ajouter Cat√©gories</span></a></li>
        </ul>
    </section>

    <!-- ‚úÖ Content -->
    <section id="content">
        <nav>
            <i class='bx bx-menu'></i>
            <a href="#" class="nav-link">List</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Rechercher...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
        </nav>

        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Ajouter une Cat√©gorie</h1>
                </div>
            </div>
        </main>

        <!-- ‚úÖ Form Container -->
        <div class="form-container">
            <h2>Ajouter une Nouvelle Cat√©gorie üè∑Ô∏è</h2>

            <!-- ‚úÖ Alert Messages -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            {% for error in form.vars.errors %}
                <div class="alert alert-danger">{{ error.message }}</div>
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'category-form'}}) }}

            <div class="form-group">
                {{ form_label(form.nomCat) }}
                {{ form_widget(form.nomCat, {'attr': {'class': 'input'}}) }}
            </div>

            <button type="submit" class="form-submit">Ajouter üìå</button>

            {{ form_end(form) }}

            <a href="{{ path('list_categorie') }}" class="btn-secondary">Retour</a>
        </div>
    </section>
{% endblock %}
