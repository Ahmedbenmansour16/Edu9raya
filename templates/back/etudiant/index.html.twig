{% extends 'back/etudiant/base.html.twig' %}

{% block title %}Etudiant{% endblock %}

{% block body %}
    <h1>Etudiant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date_naissance</th>
                <th>Annee</th>
                <th>Specialisation</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>Photo</th>
                <th>Date_inscription</th>
                <th>Statut</th>
                <th>Moyenne</th>
                <th>Cours</th>
                <th>Sexe</th>
                <th>Cin</th>
                <th>Etat_paiement</th>
                <th>Linkdin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ etudiant.dateNaissance ? etudiant.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ etudiant.annee }}</td>
                <td>{{ etudiant.specialisation }}</td>
                <td>{{ etudiant.telephone }}</td>
                <td>{{ etudiant.adresse }}</td>
                <td>{{ etudiant.photo }}</td>
                <td>{{ etudiant.dateInscription ? etudiant.dateInscription|date('Y-m-d') : '' }}</td>
                <td>{{ etudiant.statut }}</td>
                <td>{{ etudiant.moyenne }}</td>
                <td>{{ etudiant.cours }}</td>
                <td>{{ etudiant.sexe }}</td>
                <td>{{ etudiant.cin }}</td>
                <td>{{ etudiant.etatPaiement ? 'Yes' : 'No' }}</td>
                <td>{{ etudiant.linkdin }}</td>
                <td>
                    <a href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etudiant_new') }}">Create new</a>
{% endblock %}
