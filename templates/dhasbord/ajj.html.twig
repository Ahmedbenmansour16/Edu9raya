{% extends 'base.html.twig' %}

{% block title %}Ajouter un Livre{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style2.css') }}">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css">
    <style>
       .resized-logoimage {
  width: 50px;
  height: 50px;
  object-fit: cover;
  border-radius: 50%;
}
/* âœ… Form Container */
.form-container {
    background: var(--light);
    padding: 30px;
    border-radius: 15px;
    max-width: 500px;
    width: 100%;
    margin: auto;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease-in-out;
}

/* âœ… Form Header */
.form-container h1 {
    text-align: center;
    font-size: 24px;
    color: var(--dark);
    margin-bottom: 20px;
}

/* âœ… Form Fields */
.form-group {
    margin-bottom: 20px;
    position: relative;
}

.form-group label {
    display: block;
    font-weight: 500;
    color: var(--dark);
    margin-bottom: 5px;
}

/* âœ… Input Fields */
.form-group input,
.form-group select,
.form-group textarea {
    width: 100%;
    padding: 12px;
    border: 2px solid var(--grey);
    border-radius: 8px;
    font-size: 14px;
    outline: none;
    transition: all 0.3s ease-in-out;
    background-color: var(--light);
    color: var(--dark);
}

/* âœ… Input Focus Effect */
.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
    border-color: var(--blue);
    box-shadow: 0px 0px 10px rgba(98, 182, 203, 0.5);
}

/* âœ… File Upload Styling */
.form-group input[type="file"] {
    border: none;
    background: var(--grey);
    padding: 10px;
    border-radius: 5px;
    cursor: pointer;
}

/* âœ… Submit Button */
.form-submit {
    width: 100%;
    padding: 12px;
    background: var(--blue);
    color: var(--light);
    font-size: 16px;
    font-weight: 600;
    text-align: center;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
}

.form-submit:hover {
    background: var(--light-blue);
    color: var(--dark);
}

/* âœ… Responsive Design */
@media screen and (max-width: 576px) {
    .form-container {
        padding: 20px;
        max-width: 90%;
    }
}
       .form-error {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
        }

    </style>
{% endblock %}


{% block javascripts %}
    
