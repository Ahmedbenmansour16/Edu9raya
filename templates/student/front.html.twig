{% extends 'student/base.html.twig' %}

{# Bloc <title> #}
{% block title %}
  Espace √âtudiant
{% endblock %}

{# Bloc des feuilles de style suppl√©mentaires #}
{% block stylesheets %}
  {{ parent() }} {# On conserve les styles de base #}

  <style>
    /* ---------- RESET / BASE ---------- */
    body {
      font-family: "Open Sans", sans-serif;
      color: #444;
      margin: 0;
      padding: 0;
    }
    a {
      text-decoration: none;
      color: inherit;
    }
    .resized-logoimage {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 50%;
    }

    /* FLASH MESSAGES */
    .alert {
      margin-top: 15px;
    }

    /* Image Container / Cards Container */
    .cards-container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px; /* Space between cards */
      justify-content: center;
      align-items: flex-start;
      padding: 20px;
    }

    .card {
      width: 18em;
      height: auto;
      background: #1e3a8a; /* Dark Blue */
      transition: 0.5s ease-in-out;
      clip-path: polygon(30px 0%, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%, 0% 30px);
      border-top-right-radius: 20px;
      border-bottom-left-radius: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 15px;
      box-shadow: 0 5px 15px rgba(30, 58, 138, 0.5);
    }

    .card .img {
      width: 100%;
      height: 200px;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #f0f4ff;
      border-top-right-radius: 20px;
      border-bottom-left-radius: 20px;
      overflow: hidden;
    }

    .card .img img {
      width: 100%;
      height: 100%;
      object-fit: contain; /* ‚úÖ Keeps aspect ratio */
      max-width: 180px;
      max-height: 180px;
      border-radius: 10px;
    }

    .card span {
      font-weight: bold;
      color: #ffffff;
      text-align: center;
      display: block;
      font-size: 1.2em;
      margin-top: 10px;
    }

    .card .info {
      font-weight: 400;
      color: #dbeafe; /* Light Blue */
      text-align: center;
      font-size: 0.85em;
      margin: 1em;
      padding: 0 10px;
      max-height: 80px;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
    }

    .card button {
      padding: 0.8em 1.7em;
      display: block;
      margin-bottom: 10px;
      border-radius: 25px;
      border: none;
      font-weight: bold;
      background: #60a5fa; /* Medium Blue */
      color: white;
      transition: .4s ease-in-out;
      cursor: pointer;
      box-shadow: 0px 4px 8px rgba(96, 165, 250, 0.5);
    }

    .card button:hover {
      background: #2563eb; /* Darker Blue */
      color: white;
      transform: scale(1.05);
    }

    @media screen and (max-width: 768px) {
      .cards-container {
        flex-direction: column;
        align-items: center;
      }
      .card {
        width: 90%;
      }
    }

    /* Sidebar Styling */
    .filter-sidebar {
      background: #f8f9fa;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .filter-sidebar h4 {
      color: #1e3a8a;
      text-align: center;
      margin-bottom: 15px;
    }

    .filter-sidebar .form-group {
      margin-bottom: 15px;
    }

    .container-fluid {
      margin-top: 20px;
    }

    .cards-container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: flex-start;
      align-items: flex-start;
      padding: 20px;
    }

    @media (max-width: 768px) {
      .row {
        flex-direction: column;
      }
    }

    /* Chat Container */
    #chat-container {
      max-width: 600px;
      margin: auto;
      padding: 20px;
      border-radius: 10px;
      background: #f8f9fa;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      text-align: center;
    }
    #chat-container h1 {
      font-size: 22px;
      color: #333;
      margin-bottom: 15px;
    }
    #chat-container textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      resize: none;
      font-size: 14px;
      font-family: Arial, sans-serif;
    }
    #chat-container .btn {
      margin-top: 10px;
      background: #4070f4;
      color: white;
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      transition: background 0.3s ease-in-out;
    }
    #chat-container .btn:hover {
      background: #3055c7;
    }
    .response {
      margin-top: 20px;
      padding: 15px;
      border-left: 4px solid #4070f4;
      background: white;
      font-size: 14px;
      color: #333;
      text-align: left;
    }

  </style>
{% endblock %}

{# Bloc du contenu principal #}
{% block body %}
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar Filter -->
      <aside class="col-md-3">
        <div class="filter-sidebar">
          <h4>üîç Filtrer les livres</h4>

          {% if form is defined %}
            {{ form_start(form, {'attr': {'id': 'book-filter-form'}}) }}
              <!-- Disponibility Filter -->
              <div class="form-group">
                <label for="dispo_book">Disponibilit√©</label>
                {{ form_widget(form.dispo_book, {'attr': {'class': 'form-control'}}) }}
              </div>

              <!-- Has PDF File -->
              <div class="form-group">
                <label for="pdf_file">Livres avec PDF</label>
                {{ form_widget(form.pdf_file, {'attr': {'class': 'form-control'}}) }}
              </div>

              <!-- Category Filter -->
              <div class="form-group">
                <label for="category">Cat√©gorie</label>
                {{ form_widget(form.cat_book, {'attr': {'class': 'form-control'}}) }}
              </div>

              <!-- Sorting Order -->
              <div class="form-group">
                <label for="nom_book">Trier par</label>
                {{ form_widget(form.nom_book, {'attr': {'class': 'form-control'}}) }}
              </div>

              <button type="submit" class="btn btn-primary btn-block mt-2">Appliquer</button>
            {{ form_end(form) }}
          {% else %}
            <p>‚ö†Ô∏è Le formulaire n'est pas disponible.</p>
          {% endif %}
        </div>
      </aside>

      <!-- Books Display -->
      <section class="col-md-9">
        <div class="cards-container">
          {% for book in books %}
            <div class="card">
              <div class="img">
                {% if book.picture %}
                  <img src="{{ asset('uploads/pictures/' ~ book.picture) }}"
                       alt="Image du livre" class="book-image">
                {% else %}
                  <img src="{{ asset('uploads/pictures/default.jpg') }}"
                       alt="Image non disponible" class="book-image">
                {% endif %}
              </div>
              <span>{{ book.nomBook }}</span>
              <p class="info">{{ book.description|default('Aucune description disponible') }}</p>
              <a href="{{ path('book_detail', { 'id': book.id }) }}">
                <button>Voir plus</button>
              </a>
            </div>
          {% else %}
            <p>Aucun livre trouv√©.</p>
          {% endfor %}
        </div>
      </section>
    </div>
  </div>

  <!-- Chat Gemini AI -->
  <div id="chat-container">
    <h1>Ask Gemini AI</h1>
    <textarea id="question" placeholder="Type your question..."></textarea>
    <button id="askGemini" class="btn">Ask</button>
    <div id="gemini-response" class="response"></div>
  </div>
{% endblock %}

{# Bloc JavaScript suppl√©mentaire #}
{% block javascripts %}
  {{ parent() }} {# On garde le JS commun (Bootstrap, etc.) #}

  <script>
    document.getElementById("askGemini").addEventListener("click", function() {
      const question = document.getElementById("question").value.trim();
      if (!question) {
        alert("Please enter a question!");
        return;
      }

      fetch("/api/gemini", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ prompt: question })
      })
      .then(response => response.json())
      .then(data => {
        if (data.error) {
          document.getElementById("gemini-response").innerText = "Error: " + data.error;
        } else {
          document.getElementById("gemini-response").innerText = data.candidates[0].content.parts[0].text;
        }
      })
      .catch(error => console.error("Error:", error));
    });
  </script>
{% endblock %}
