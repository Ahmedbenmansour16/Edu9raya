    color: #dbeafe; /* Light Blue */
    text-align: center;
    font-size: 0.85em;
    margin: 1em;
    padding: 0 10px;
    max-height: 80px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

/* Buttons */
.card button {
    padding: 0.8em 1.7em;
    display: block;
    margin-bottom: 10px;
    border-radius: 25px;
    border: none;
    font-weight: bold;
    background: #60a5fa; /* Medium Blue */
    color: white;
    transition: .4s ease-in-out;
    cursor: pointer;
    box-shadow: 0px 4px 8px rgba(96, 165, 250, 0.5);
}

.card button:hover {
    background: #2563eb; /* Darker Blue */
    color: white;
    transform: scale(1.05);
}

