   <div id="chat-container">
    <h1>Ask Gemini AI</h1>
    <textarea id="question" placeholder="Type your question..."></textarea>
    <button id="askGemini" class="btn">Ask</button>
    <div id="gemini-response" class="response"></div>
</div>

<style>
    /* Chat Container */
    #chat-container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border-radius: 10px;
        background: #f8f9fa;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Title */
    h1 {
        font-size: 22px;
        color: #333;
        margin-bottom: 15px;
    }

    /* Textarea */
    textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        resize: none;
        font-size: 14px;
        font-family: Arial, sans-serif;
    }

    /* Button */
    .btn {
        margin-top: 10px;
        background: #4070f4;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background 0.3s ease-in-out;
    }

    .btn:hover {
        background: #3055c7;
    }

    /* Response Box */
    .response {
        margin-top: 20px;
        padding: 15px;
        border-left: 4px solid #4070f4;
        background: white;
        font-size: 14px;
        color: #333;
        text-align: left;
    }
</style>

<script>
    document.getElementById("askGemini").addEventListener("click", function() {
        const question = document.getElementById("question").value.trim();
        if (!question) {
            alert("Please enter a question!");
            return;
        }

        fetch("/api/gemini", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ prompt: question })
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                document.getElementById("gemini-response").innerText = "Error: " + data.error;
            } else {
                document.getElementById("gemini-response").innerText = data.candidates[0].content.parts[0].text;
            }
        })
        .catch(error => console.error("Error:", error));
    });
</script>


