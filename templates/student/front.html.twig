/* Individual Card */
.card {
    width: 18em;
    height: auto;
    background: #1e3a8a; /* Dark Blue */
    transition: 0.5s ease-in-out;
    clip-path: polygon(30px 0%, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%, 0% 30px);
    border-top-right-radius: 20px;
    border-bottom-left-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 15px;
    box-shadow: 0 5px 15px rgba(30, 58, 138, 0.5);
}

/* Image Container */
.card .img {
    width: 100%;
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #f0f4ff;
    border-top-right-radius: 20px;
    border-bottom-left-radius: 20px;
    overflow: hidden;
}

/* Book Image */
.card .img img {
    width: 100%;
    height: 100%;
    object-fit: contain; /* ‚úÖ Keeps aspect ratio */
    max-width: 180px;
    max-height: 180px;
    border-radius: 10px;
}

/* Card Title */
.card span {
    font-weight: bold;
    color: #ffffff;
    text-align: center;
    display: block;
    font-size: 1.2em;
    margin-top: 10px;
}

/* Book Description */
