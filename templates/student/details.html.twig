/* Cards Container - Makes all cards flex */
.cards-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px; /* Space between cards */
    justify-content: center;
    align-items: flex-start;
    padding: 20px;
}

/* Individual Card */
.card {
    width: 18em;
    height: auto;
    background: #1e3a8a; /* Dark Blue */
    transition: 0.5s ease-in-out;
    clip-path: polygon(30px 0%, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%, 0% 30px);
    border-top-right-radius: 20px;
    border-bottom-left-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 15px;
    box-shadow: 0 5px 15px rgba(30, 58, 138, 0.5);
}

/* Image Container */
.card .img {
    width: 100%;
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #f0f4ff;
    border-top-right-radius: 20px;
    border-bottom-left-radius: 20px;
    overflow: hidden;
}

/* Book Image */
.card .img img {
    width: 100%;
    height: 100%;
    object-fit: contain; /* âœ… Keeps aspect ratio */
    max-width: 180px;
    max-height: 180px;
    border-radius: 10px;
}

/* Card Title */
.card span {
    font-weight: bold;
    color: #ffffff;
    text-align: center;
    display: block;
    font-size: 1.2em;
    margin-top: 10px;
}

/* Book Description */
.card .info {
    font-weight: 400;
    color: #dbeafe; /* Light Blue */
    text-align: center;
    font-size: 0.85em;
    margin: 1em;
    padding: 0 10px;
    max-height: 80px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

/* Buttons */
.card button {
    padding: 0.8em 1.7em;
    display: block;
    margin-bottom: 10px;
    border-radius: 25px;
    border: none;
    font-weight: bold;
    background: #60a5fa; /* Medium Blue */
    color: white;
    transition: .4s ease-in-out;
    cursor: pointer;
    box-shadow: 0px 4px 8px rgba(96, 165, 250, 0.5);
}

.card button:hover {
    background: #2563eb; /* Darker Blue */
    color: white;
    transform: scale(1.05);
}
