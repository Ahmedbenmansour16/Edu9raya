{% extends 'security/base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h1 class="h3 mb-4 text-center">Inscription</h1>

                    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(registrationForm.prenom, {
                                    'attr': {'class': 'form-control'},
                                    'label_attr': {'class': 'form-label'}
                                }) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_row(registrationForm.nom, {
                                    'attr': {'class': 'form-control'},
                                    'label_attr': {'class': 'form-label'}
                                }) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(registrationForm.email, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(registrationForm.role, {
                                'attr': {'class': 'form-select'},
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(registrationForm.plainPassword, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                        </div>
                    {{ form_end(registrationForm) }}

                    <div class="text-center mt-4">
                        <p class="mb-0">Déjà inscrit ?
                            <a href="{{ path('app_login') }}" class="text-decoration-none">Connectez-vous</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}